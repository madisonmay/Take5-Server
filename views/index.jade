        function breakEnded() {
            console.log("Break ended");
        }

        $(document).ready(function() {
            $('#counter').countdown({image: 'images/digits.png', startTime: "05:00", format: "m:ss", stepTime: 60,
                                    timerEnd: breakEnded, digitWidth: 53, digitHeight: 77});
        });


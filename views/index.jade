extends layout

block scripts
    script(src="/javascripts/countdown.js")
    script(src="/javascripts/timer.js")
    script

        function breakEnded() {
            console.log("Break ended");
            $('#counter').remove();
            $('#timer').append('<h2>Mission Accomplished</h2>');
        }

        $(document).ready(function() {
            $('#counter').countdown({image: 'images/digits.png', startTime: "00:10", format: "mm:ss", stepTime: 60,
                                    timerEnd: breakEnded, digitWidth: 53, digitHeight: 77});
        });

block content
    div.hero-unit.span3.offset4#timer(style="padding-left: 10%; padding-right: 10%; min-width: 300px; text-align: center;")
        div#counter(style="padding-left:33px;")


